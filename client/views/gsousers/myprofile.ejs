<% layout('/layouts/boilerplate') %>
<nav class=" shadow-[0px_0px_10px_0px_rgba(0,0,0,0.2)] col-span-2 2xl:text-base xl:text-sm 2xl:p-6 xl:p-3 bg-white rounded-lg ">
  <%- include('../partials/usernavbar'); %>
</nav>

<main class="col-span-10 flex flex-col">
  <%- include('../partials/flash') %>
  <div class="flex justify-between text-white mb-1">
    <p class="font-semibold text-2xl flex flex-cols text-white">My Profile</p>
    <p class="font-semibold text-text-black">Welcome <%= user.firstname.charAt(0).toUpperCase() + user.firstname.slice(1) %></p>
  </div>
  <div class=" h-full"> 
  <div id="myInformationDiv" class="h-full flex justify-center gap-5 ">
    <div id="informationForm" class="bg-white h-full border 2xl:w-2/4 xl:w-7/12 rounded-xl shadow-[0px_0px_10px_0px_rgba(0,0,0,0.2)] flex flex-col justify-center items-center gap-4 p-10" >
      <h1 class="text-4xl font-bold">Your Information</h1>
      <div class="flex flex-col gap-4 w-full ">
        <div class="flex w-full gap-10">
          <div  class="w-full">
            <p class="text-2xl font-semibold">
              Firstname :
            </p>
            <div class="border-2 border-slate-500 rounded-lg w-full px-2 py-1 ">
              <%= user.firstname.charAt(0).toUpperCase() + user.firstname.slice(1) %>
            </div>
          </div>
          <div class="w-full">
            <p class="text-2xl font-semibold">
              Lastname :
            </p>
            <div class="border-2 border-slate-500 rounded-lg w-full px-2 py-1 ">
              <%= user.lastname.charAt(0).toUpperCase() + user.lastname.slice(1) %>
            </div>
          </div>
        </div>
        <div>
          <p class="text-2xl font-semibold">Contact no. : </p>
          <div class="border-2 border-slate-500 rounded-lg px-2 py-1 ">
            0<%= user.phone %>
          </div>
        </div>
        <div>
          <p class="text-2xl font-semibold">Email : </p>
          <div class="border-2 border-slate-500 rounded-lg px-2 py-1 ">
            <%= user.email %>
          </div>
        </div>
        <div>
          <p class="text-2xl font-semibold">Address :</p>
          <div class="border-2 border-slate-500 rounded-lg px-2 py-1 ">
            <%= user.address %>
          </div>
        </div>
        <div class="flex gap-10 w-full">
          <div class="w-full">
            <p class="text-2xl font-semibold">
              Department :
            </p>
            <div class="border-2 border-slate-500 rounded-lg w-full px-2 py-1 ">
              <%= user.department %>
            </div>
          </div>
          <div class="w-full">
            <p class="text-2xl font-semibold">
              Role :
            </p>
            <div class="border-2 border-slate-500 rounded-lg w-full px-2 py-1 ">
              <%= user.role %>
            </div>
          </div>
        </div>
        <div class="flex justify-center items-center mt-10 order-last">
          <a href="/user/myprofile/update/<%=user.id %>">
            <button class="w-24 h-10 border-2 bg-orange-500 border-orange-300 shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] rounded-md  font-semibold text-white hover:bg-white hover:text-orange-500 hover:border-orange-300 hover:shadow-[2px_2px_0px_0px_orange] transition-ease-in   duration-300 text-lg">Edit</button>
          </a>
        </div>

      </div>
  
    </div>
    
  </div>
  
  </div>
</div>

  <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
  <script src="/js/myprofile.js"></script>
</main>